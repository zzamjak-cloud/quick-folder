{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "QuickFolder Widget",
  "version": "0.1.1",
  "identifier": "com.quickfolder.widget",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "QuickFolder",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/zzamjak-cloud/quick-folder/releases/latest/download/latest.json"
      ],
      "pubkey": "REPLACE_WITH_GENERATED_PUBLIC_KEY",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
